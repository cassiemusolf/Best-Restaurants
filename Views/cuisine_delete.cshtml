@{
    Layout="Shared/_Layout.cshtml";
}
<div class="jumbotron cuisine">
    <h1>Best Restaurants</h1>
</div>
<hr/>
<div class="container">
<h2>Are you sure you want to delete this cuisine and all of its restaurants?</h2>
<form action="/cuisine/delete/@Model.GetId()" method="post">
    <div class="form-group edit-name">
        <label><h2>@Model.GetName()</h2></label>
        <input type="hidden" name="_method" value="DELETE">
    </div>

    <div class="buttons">
        <button class="btn btn-lg btn-primary" type="submit">Delete</button>
    </div>
</form>
<p><a href="/">Return Home</a></p>
</div>
