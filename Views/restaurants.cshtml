@{
  Layout="Shared/_Layout.cshtml";
}
<div class="jumbotron restaurants">
<h1>Best Restaurants</h1>
</div>
<div class="container">
@if (@Model.Count == 0)
{
  <p>No restaurants have been added yet!</p>
}
  <h1>List of All Restaurants</h1>
  <ul>
    @foreach (var restaurant in Model)
    {
      <li><a href="/restaurants/@restaurant.GetId()">@restaurant.GetName()</a> | <a href="/restaurant/edit/@restaurant.GetId()">Edit</a> | <a href="/restaurant/delete/@restaurant.GetId()">Delete</a></li>
    }
  </ul>
  <form action="/restaurants/delete" method="post">
    <button class="btn btn-lg btn-primary" type="submit">Clear All</button>
  </form>
<p><a href="/restaurants/new">Add New</a> | <a href="/">Return Home</a></p>
</div>
