@{
  Layout="Shared/_Layout.cshtml";
}
<div class="jumbotron cuisine">
<h1>Best Restaurants</h1>
</div>
<div class="container">
@if (@Model["restaurants"].Count == 0)
{
  <p>No restaurants have been added yet!</p>
}
else
{
<h2>Restaurants In Your Cuisine:</h2>
  <ul>
    @foreach (var restaurant in @Model["restaurants"])
    {
      <li><a href="/restaurants/@restaurant.GetId()">@restaurant.GetName()</a></li>
    }
  </ul>
}
<p><a href="/restaurants/new">Add New</a> | <a href="/">Return Home</a></p>
</div>
