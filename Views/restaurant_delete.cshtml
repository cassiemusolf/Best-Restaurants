@{
  Layout="Shared/_Layout.cshtml";
}
<div class="jumbotron restaurants">
<h1>Best Restaurants</h1>
</div>
<hr/>
<div class="container">
<h1>Are you sure you want to delete this restaurant?</h1>

<form action="/restaurant/delete/@Model.GetId()" method="post">
    <div class="form-group edit-name">
        <label><h2>@Model.GetName()</h2></label>
      <input type="hidden" name="_method" value="DELETE">
    </div>
<div class="buttons">
     <button class="btn btn-lg btn-primary" type="submit">Delete</button>
</div>
</form>
<p><a href="/">Return Home</a></p>
</div>
