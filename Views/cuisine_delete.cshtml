@{
  Layout="Shared/_Layout.cshtml";
}
<div class="jumbotron">
<h1>Best Restaurants</h1>
</div>
<hr/>
<h2>Are you sure you want to delete this cuisine and all of its restaurants?</h2>
<h4>@Model.GetName()</h4>
<form action="/cuisine/delete/@Model.GetId()" method="post">
  <input type="hidden" name="_method" value="DELETE">
  <button class="btn btn-lg btn-primary" type="submit">Delete</button>
</form>
<p><a href="/">Return Home</a></p>
